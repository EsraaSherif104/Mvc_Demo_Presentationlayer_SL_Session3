@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (Model.Count()>0)
{
    <div class="m-2">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="UserName" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-info" value="Search" />

            </div>

        </form>


    </div>
    <table class="table table-striped tab-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(x=>x.id)</td>
                <td>@Html.DisplayNameFor(x=>x.Fname)</td>
                <td>@Html.DisplayNameFor(x => x.Lname)</td>
                <td>@Html.DisplayNameFor(x => x.Email)</td>
                <td>@Html.DisplayNameFor(x => x.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(x => x.Roles)</td>
                <td>Detials</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>

        </thead>
        <tbody>

            @foreach(var User in Model)
            {
                <tr>
                    <td>@User.id</td>
                    <td>@User.Fname</td>
                    <td>@User.Lname</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(",",User.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@User.id" />

                </tr>
            }


        </tbody>
    </table>
}
else
{
    <h1> There Is No Users</h1>


}