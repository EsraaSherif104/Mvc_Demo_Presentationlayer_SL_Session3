@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}


@if (Model.Count() > 0)
{
    <div class="m-2">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="RoleName" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-info" value="Search" />

            </div>

        </form>


    </div>
    <table class="table table-striped tab-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(x => x.Id)</td>
                <td>@Html.DisplayNameFor(x => x.RoleName)</td>

                
                <td>Detials</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>

        </thead>
        <tbody>

            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.RoleName</td>

                   
                    <partial name="_ButtonsPartialView" model="@role.Id" />

                </tr>
            }


        </tbody>
    </table>
}
else
{
    <h1> There Is No Roles</h1>


}